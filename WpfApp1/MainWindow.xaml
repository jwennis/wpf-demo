<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="20">
    
    <Grid>

        <!--
        
        content without property element
        looks for ContentPropertyAttribute
        
        [ContentProperty("Content")]
        public class ContentControl {...}
        
        <Button>
            Add customer
        </Button>
        
        -->
        
        <!--
        
        content with property element
        
        <Button Content="Add customer"
                x:Name="btnAddCustomer"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                Click="ButtonAddCustomer_Click" />
        -->

        <!-- content with content syntax -->
        
        <Button x:Name="btnAddCustomer"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                Width="75"
                Click="ButtonAddCustomer_Click">

            <!--
            can actually remove this tag since it is default
            <Button.Content>
            -->
                <StackPanel Orientation="Horizontal">
                    <Image Source="/images/add.png" 
                           Height="18" 
                           Margin="0 0 10 0" />
                    <TextBlock Text="Add" />
                </StackPanel>
            <!--
            </Button.Content>
            -->

        </Button>
        
        
        
        

    </Grid>
    
</Window>
